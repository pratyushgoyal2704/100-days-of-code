class Solution {
public:
    int numRescueBoats(vector<int>& people, int limit) {
        int ans = 0;
        int n = people.size();
        sort(people.begin(),people.end());
        int l = 0;
        int r = n - 1;
        
        while(l<=r) {
            if(people[l] + people[r] <= limit) {
                l++;
                r--;
                ans++;
            }
            else {
                r--;
                ans++;
            }
        }
        return ans;
    }
};
